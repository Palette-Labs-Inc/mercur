{
  "private": true,
  "name": "mercur",
  "version": "1.0.0",
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "bin": {
    "mercur-exec": "./index.js"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "packages/modules/*"
    ],
    "nohoist": [
      "apps/marketplace",
      "apps/marketplace/**",
      "apps/marketplace/**/react",
      "apps/marketplace/**/react-dom",
      "apps/marketplace/**/@types/react",
      "apps/marketplace/**/@types/react-dom"
    ]
  },
  "scripts": {
    "mercur-exec": "turbo run dev",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "codegen": "cd .",
    "generate:oas": "turbo run generate:oas"
  },
  "resolutions": {
    "zod": "3.25.8",
    "@medusajs/ui": "4.0.16",
    "@radix-ui/react-popover": "1.1.5"
  }
}