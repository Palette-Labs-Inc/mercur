{
  "private": true,
  "name": "mercur",
  "version": "1.0.0",
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "bin": {
    "mercur-exec": "./index.js"
  },
  "packageManager": "yarn@4.9.4",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "packages/modules/*",
      "vendor/nosh/packages/universal-components/alf",
      "vendor/nosh/packages/universal-components/utils",
      "vendor/nosh/packages/universal-components/storage",
      "vendor/nosh/packages/ui-shared-utils",
      "vendor/nosh/packages/figma-tokens",
      "vendor/nosh/packages/backend-admin-sdk",
      "vendor/nosh/packages/backend-customer-sdk",
      "vendor/nosh/packages/backend-db-types",
      "vendor/nosh/packages/math",
      "vendor/nosh/packages/shared-types"
    ],
    "nohoist": [
      "apps/nosh",
      "apps/nosh/**",
      "apps/nosh/**/react",
      "apps/nosh/**/react-dom",
      "apps/nosh/**/react-native",
      "apps/nosh/**/@types/react",
      "apps/nosh/**/@types/react-dom",
      "apps/nosh/**/expo",
      "apps/nosh/**/expo-*",
      "apps/nosh/**/react-native-reanimated",
      "apps/nosh/**/react-native-gesture-handler",
      "apps/nosh/**/react-native-web"
    ]
  },
  "installConfig": { "hoistingLimits": "workspaces" },
  "prefer-workspace-packages": true,
  "scripts": {
    "mercur-exec": "turbo run dev",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "codegen": "turbo run generate:sdk",
    "generate:oas": "turbo run generate:oas"
  },
  "resolutions": {
    "zod": "3.25.8",
    "@medusajs/ui": "4.0.16",
    "@radix-ui/react-popover": "1.1.5"
  }
}
